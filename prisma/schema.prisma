generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  prompt    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  builds    Build[]
}

model Build {
  id         String   @id @default(cuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id])
  status     String
  previewUrl String?
  createdAt  DateTime @default(now())
}
